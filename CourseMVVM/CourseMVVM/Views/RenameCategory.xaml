<Window x:Class="CourseMVVM.Views.RenameCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RenameCategory" Height="141.715" Width="400.72">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="88,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="290" Text="{Binding NewName, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Content="Изменить" HorizontalAlignment="Left" Margin="103,62,0,0" VerticalAlignment="Top" Width="94" Height="33" Command="{Binding ConfirmCommand}"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Margin="202,62,0,0" VerticalAlignment="Top" Width="94" Height="33" Command="{Binding CancelCommand}"/>
        <Label Content="Новое имя:" HorizontalAlignment="Left" Margin="15,22,0,0" VerticalAlignment="Top" Width="73"/>

    </Grid>
</Window>
