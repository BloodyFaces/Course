<Window x:Class="CourseMVVM.Views.Test"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BrainC#" Height="624.94" Width="687.866" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Вопрос:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="38" Width="93" FontSize="20"/>
        <Label HorizontalAlignment="Left" Margin="103,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.455,-0.927" FontSize="20" Content="{Binding CurrentQuestion}" Height="43" Width="30"/>
        <Label HorizontalAlignment="Left" Margin="171,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.455,-0.927" FontSize="20" Content="{Binding NumberOfQuestions}" Height="44" Width="33"/>

        <Button Content="{Binding NextContent}" HorizontalAlignment="Left" Margin="486,525,0,0" VerticalAlignment="Top" Width="137" Height="44" Command="{Binding NextCommand}"/>
        <Button Content="Пропустить" HorizontalAlignment="Left" Margin="333,525,0,0" VerticalAlignment="Top" Width="137" Height="44" Command="{Binding SkipCommand}"/>
        <Button Content="Завершить" HorizontalAlignment="Left" Margin="525,14,0,0" VerticalAlignment="Top" Width="137" Height="37" Command="{Binding FinishCommand}"/>
        <RadioButton Content="{Binding CA}" IsChecked="{Binding IsA}" HorizontalAlignment="Left" Margin="19,344,0,0" VerticalAlignment="Top" Height="21" Width="37" RenderTransformOrigin="0,0"/>
        <RadioButton Content="{Binding CB}" IsChecked="{Binding IsB}" HorizontalAlignment="Left" Margin="19,388,0,0" VerticalAlignment="Top" Height="21" Width="37" RenderTransformOrigin="0,0"/>
        <RadioButton Content="{Binding CC}" IsChecked="{Binding IsC}" HorizontalAlignment="Left" Margin="19,432,0,0" VerticalAlignment="Top" Height="21" Width="37" RenderTransformOrigin="0,0"/>
        <RadioButton Content="{Binding CD}" IsChecked="{Binding IsD}" HorizontalAlignment="Left" Margin="19,476,0,0" VerticalAlignment="Top" Height="22" Width="37" RenderTransformOrigin="0,0"/>
        <Label HorizontalAlignment="Left" Margin="133,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.455,-0.927" FontSize="20" Content="из" Height="44" Width="33"/>
        <Label Content="{Binding AnswerA}" HorizontalAlignment="Left" Margin="56,332,0,0" VerticalAlignment="Top" Height="39" Width="593" RenderTransformOrigin="0.5,0.231"/>
        <Label Content="{Binding AnswerB}" HorizontalAlignment="Left" Margin="56,376,0,0" VerticalAlignment="Top" Height="39" Width="593" RenderTransformOrigin="0.471,0.231"/>
        <Label Content="{Binding AnswerC}" HorizontalAlignment="Left" Margin="56,420,0,0" VerticalAlignment="Top" Height="39" Width="593" RenderTransformOrigin="0.471,0.231"/>
        <Label Content="{Binding AnswerD}" HorizontalAlignment="Left" Margin="56,464,0,0" VerticalAlignment="Top" Height="39" Width="593" RenderTransformOrigin="0.471,0.308"/>
        <TextBlock HorizontalAlignment="Left" Margin="32,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="248" Width="603" Text="{Binding Description}" FontSize="14"/>
    </Grid>
</Window>
