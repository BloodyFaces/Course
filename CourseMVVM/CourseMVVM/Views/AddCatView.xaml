<Window x:Class="CourseMVVM.Views.AddCatView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddCatView" Height="125.685" Width="427.354">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="29" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="389" Text="{Binding CategoryName, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="31,50,0,0" VerticalAlignment="Top" Width="170" Height="27" Command="{Binding AddCatCommand}"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Margin="206,50,0,0" VerticalAlignment="Top" Width="160" Height="27" Command="{Binding CancelCommand}"/>

    </Grid>
</Window>
