<Window x:Class="CourseMVVM.Views.StudentMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="{DynamicResource WindowBrush}"
        BorderThickness="3"
        BorderBrush="Black"
        Title="BrainC#" Height="342.257" Width="445.808" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Window.Resources>
        <SolidColorBrush x:Key="WindowBrush" Color="#F5F5F5"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="Выйти" Grid.Column="1" HorizontalAlignment="Left" Margin="332,10,0,0" VerticalAlignment="Top" Width="98" Command="{Binding LogoutCommand}" Height="36" FontSize="16"/>
        <Label Grid.ColumnSpan="2" Content="Категории" HorizontalAlignment="Left" Margin="103,10,0,0" VerticalAlignment="Top" Height="36" Width="150" FontSize="24"/>
        <ListBox Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="197" Margin="23,51,0,0" VerticalAlignment="Top" Width="261" ItemsSource="{Binding CatList}" SelectedItem="{Binding Selected}"/>
        <Button Grid.ColumnSpan="2" Content="Начать тест" HorizontalAlignment="Left" Margin="80,259,0,0" VerticalAlignment="Top" Width="144" Height="55" Command="{Binding StartTestCommand}" FontSize="18"/>
        <Label Grid.ColumnSpan="2" Content="Результат:" HorizontalAlignment="Left" Margin="292,85,0,0" VerticalAlignment="Top" Height="36" Width="85" FontSize="18"/>
        <Label Grid.ColumnSpan="2" Content="Баллы:" HorizontalAlignment="Left" Margin="292,121,0,0" VerticalAlignment="Top" Height="29" Width="47" FontSize="14"/>
        <Label Grid.ColumnSpan="2" Content="Общее &#xD;&#xA;количество:" HorizontalAlignment="Left" Margin="292,150,0,0" VerticalAlignment="Top" Height="39" Width="77" FontSize="14"/>
        <Label Grid.ColumnSpan="2" Content="Оценка:" HorizontalAlignment="Left" Margin="292,203,0,0" VerticalAlignment="Top" Height="29" Width="54" FontSize="14"/>
        <Label Grid.ColumnSpan="2" Content="{Binding Points}" HorizontalAlignment="Left" Margin="344,118,0,0" VerticalAlignment="Top" Height="30" Width="27" FontSize="18"/>
        <Label Grid.ColumnSpan="2" Content="{Binding Total}" HorizontalAlignment="Left" Margin="380,157,0,0" VerticalAlignment="Top" Height="32" Width="28" FontSize="18"/>
        <Label Grid.ColumnSpan="2" Content="{Binding Mark}" HorizontalAlignment="Left" Margin="351,200,0,0" VerticalAlignment="Top" Height="26" Width="26" FontSize="18"/>
    </Grid>
</Window>
