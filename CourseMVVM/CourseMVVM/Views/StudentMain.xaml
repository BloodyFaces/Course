<Window x:Class="CourseMVVM.Views.StudentMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StudentMain" Height="351.59" Width="445.808" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="Выйти" Grid.Column="1" HorizontalAlignment="Left" Margin="209,19,0,0" VerticalAlignment="Top" Width="75" Command="{Binding LogoutCommand}" Height="20"/>
        <Label Grid.ColumnSpan="2" Content="Категории" HorizontalAlignment="Left" Margin="23,10,0,0" VerticalAlignment="Top" Height="36" Width="150" FontSize="18"/>
        <ListBox Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="197" Margin="23,51,0,0" VerticalAlignment="Top" Width="261" ItemsSource="{Binding CatList}" SelectedItem="{Binding Selected}"/>
        <Button Grid.ColumnSpan="2" Content="Начать тест" HorizontalAlignment="Left" Margin="86,257,0,0" VerticalAlignment="Top" Width="127" Height="41" Command="{Binding StartTestCommand}"/>
        <Label Grid.ColumnSpan="2" Content="Результат:" HorizontalAlignment="Left" Margin="292,85,-4,0" VerticalAlignment="Top" Height="36" Width="150" FontSize="18"/>
        <Label Grid.ColumnSpan="2" Content="Баллы:" HorizontalAlignment="Left" Margin="292,121,0,0" VerticalAlignment="Top" Height="29" Width="47"/>
        <Label Grid.ColumnSpan="2" Content="Общее &#xD;&#xA;количество:" HorizontalAlignment="Left" Margin="292,150,0,0" VerticalAlignment="Top" Height="39" Width="80"/>
        <Label Grid.ColumnSpan="2" Content="Оценка:" HorizontalAlignment="Left" Margin="292,189,0,0" VerticalAlignment="Top" Height="29" Width="54"/>
        <Label Grid.ColumnSpan="2" Content="{Binding Points}" HorizontalAlignment="Left" Margin="344,121,0,0" VerticalAlignment="Top"/>
        <Label Grid.ColumnSpan="2" Content="{Binding Total}" HorizontalAlignment="Left" Margin="377,150,0,0" VerticalAlignment="Top"/>
        <Label Grid.ColumnSpan="2" Content="{Binding Mark}" HorizontalAlignment="Left" Margin="351,189,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
