<Window x:Class="CourseMVVM.Views.MBView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="{DynamicResource WindowBrush}"
        BorderThickness="3"
        BorderBrush="Black"
        Title="MBView" Height="186.977" Width="356.485" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Window.Resources>
        <SolidColorBrush x:Key="WindowBrush" Color="#F5F5F5"/>
    </Window.Resources>
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="112" Width="330" FontSize="18" TextAlignment="Center" Text="{Binding Message}"/>
        <Button Content="OK" HorizontalAlignment="Left" Height="38" Margin="111,133,0,0" VerticalAlignment="Top" Width="133" Command="{Binding CancelCommand}"/>
    </Grid>
</Window>
